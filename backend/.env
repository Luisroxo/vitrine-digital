# ========================================
# VITRINE DIGITAL - SAAS MULTI-TENANT
# ========================================

# Server Configuration
NODE_ENV=development
PORT=3334
HOST=localhost

# Database Configuration
DB_TYPE=sqlite3
DB_PATH=dev_database.sqlite3

# Multi-tenant Configuration
DEFAULT_TENANT=vitrine360
TENANT_CACHE_TTL=300

# ========================================
# WEEK 7: BILLING & MONETIZATION
# ========================================

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Billing Configuration
BILLING_CURRENCY=BRL
BILLING_SUCCESS_URL=http://localhost:3000/admin?tab=billing&success=true
BILLING_CANCEL_URL=http://localhost:3000/admin?tab=billing&canceled=true

# ========================================
# WEEK 2: INFRASTRUCTURE AUTOMATION
# ========================================

# Server IP (seu VPS/servidor de produção)
SERVER_IP=YOUR_SERVER_IP_HERE

# Cloudflare API Configuration
CLOUDFLARE_API_TOKEN=YOUR_CLOUDFLARE_API_TOKEN
CLOUDFLARE_ZONE_ID=YOUR_CLOUDFLARE_ZONE_ID
CLOUDFLARE_EMAIL=your-email@domain.com

# Nginx Configuration
NGINX_SITES_AVAILABLE=/etc/nginx/sites-available
NGINX_SITES_ENABLED=/etc/nginx/sites-enabled

# SSL/Certbot Configuration
CERTBOT_EMAIL=your-email@domain.com
SSL_CHALLENGE_PATH=/var/www/certbot
CERTBOT_WEBROOT=/var/www/certbot

# Domain Management
DNS_PROPAGATION_CHECK=true
DNS_PROPAGATION_TIMEOUT=300
SSL_AUTO_RENEWAL=true

# ========================================
# LEGACY: BLING INTEGRATION
# ========================================

# Bling API Configuration
BLING_CLIENT_ID=your_bling_client_id
BLING_CLIENT_SECRET=your_bling_client_secret
BLING_REDIRECT_URI=http://localhost:3333/api/bling/callback
BLING_SCOPE=catalogo produtos vendas

# OAuth URLs
BLING_AUTH_URL=https://bling.com.br/Api/v3/oauth/authorize
BLING_TOKEN_URL=https://bling.com.br/Api/v3/oauth/token
BLING_API_BASE=https://bling.com.br/Api/v3

# ========================================
# SECURITY & MONITORING
# ========================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRE=24h

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
DOMAIN_RATE_LIMIT_MAX=5

# Health Check
HEALTH_CHECK_INTERVAL=300
HEALTH_CHECK_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/vitrine-saas.log
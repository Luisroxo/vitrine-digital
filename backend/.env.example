# Configurações do Servidor
PORT=3333
NODE_ENV=development

# Configurações do Banco de Dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vitrine_digital
DB_USER=vitrine_user
DB_PASS=vitrine_pass

# Configurações da Integração Bling ERP
# Obtenha essas credenciais criando uma aplicação em: https://developer.bling.com.br/aplicativos
BLING_CLIENT_ID=your_bling_client_id_here
BLING_CLIENT_SECRET=your_bling_client_secret_here
BLING_ACCESS_TOKEN=
BLING_REFRESH_TOKEN=
BLING_REDIRECT_URI=http://localhost:3333/api/bling/auth/callback

# URLs da API Bling
BLING_API_URL=https://www.bling.com.br/Api/v3
BLING_AUTH_URL=https://www.bling.com.br/Api/v3/oauth/authorize
BLING_TOKEN_URL=https://www.bling.com.br/Api/v3/oauth/token

# Configurações de Sincronização
BLING_SYNC_INTERVAL=3600000
BLING_AUTO_SYNC_ENABLED=false
BLING_WEBHOOK_ENABLED=true

# Configurações de Segurança
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=10

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000

# Configurações de Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY src/ ./src/
COPY knexfile.js ./

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S bling -u 1001

# Change ownership
RUN chown -R bling:nodejs /app
USER bling

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node src/health-check.js

EXPOSE 3003

CMD ["node", "src/server.js"]
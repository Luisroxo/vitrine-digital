NODE_ENV=development
PORT=3003

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/bling_service_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bling_service_db
DB_USER=user
DB_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Bling API Configuration
BLING_API_URL=https://bling.com.br/Api/v3
BLING_CLIENT_ID=your_bling_client_id
BLING_CLIENT_SECRET=your_bling_client_secret
BLING_REDIRECT_URI=http://localhost:3003/auth/callback

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring
HEALTH_CHECK_INTERVAL=30000
SYNC_INTERVAL=300000

# Queue Configuration
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_CONCURRENCY=5
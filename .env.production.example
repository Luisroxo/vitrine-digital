# Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Database Configuration
DB_USER=vitrine_admin
DB_PASSWORD=your_secure_database_password_here
DB_NAME=vitrine_digital_prod

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# JWT and Security
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long

# Stripe Configuration (Production Keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here
CLOUDFLARE_DOMAIN=vitrine360.com.br

# Bling ERP Configuration
BLING_CLIENT_ID=your_bling_client_id_here
BLING_CLIENT_SECRET=your_bling_client_secret_here
BLING_REDIRECT_URI=https://engine.vitrine360.com.br/auth/bling/callback

# Email Configuration (SendGrid/SES)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@vitrine360.com.br
EMAIL_FROM_NAME=Vitrine Digital

# Monitoring and Logging
GRAFANA_PASSWORD=your_grafana_admin_password_here
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# Application URLs
API_BASE_URL=https://engine.vitrine360.com.br
FRONTEND_URL=https://app.vitrine360.com.br
WEBHOOK_BASE_URL=https://engine.vitrine360.com.br/webhooks

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760  # 10MB
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# SSL and Security
SSL_CERT_PATH=/etc/ssl/certs/vitrine360.com.br.crt
SSL_KEY_PATH=/etc/ssl/private/vitrine360.com.br.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=vitrine-digital-backups
BACKUP_S3_ACCESS_KEY=your_s3_access_key_here
BACKUP_S3_SECRET_KEY=your_s3_secret_key_here
BACKUP_S3_REGION=us-east-1

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CHAT_SUPPORT=true
ENABLE_BETA_FEATURES=false
ENABLE_MAINTENANCE_MODE=false

# Performance
NODE_OPTIONS="--max-old-space-size=2048"
UV_THREADPOOL_SIZE=4

# Timezone
TZ=America/Sao_Paulo